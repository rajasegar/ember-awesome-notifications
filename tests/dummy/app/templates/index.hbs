<div class="column">
	<p class="small">Click on the button to show the notification:</p>
	<button id="notification-trigger" class="progress-button" onclick={{action "showNotification"}}>
		<span class="content">Show Notification</span>
		<span class="progress"></span>
	</button>
  {{#ember-wormhole to="ea-notification-container"}}
    {{ea-notification-container}}
  {{/ember-wormhole}}

</div>
<div class="column">
	<nav class="codrops-demos">
		<h3>Growl-like</h3>
		<div>
			<a class="{{if (eq effect 'scale') 'current-demo'}}" onClick={{ action (mut effect) 'scale' }}>Scale</a>
			<a class="{{if (eq effect 'jelly') 'current-demo'}}" onClick={{ action (mut effect) 'jelly' }}>Jelly</a>
			<a class="{{if (eq effect 'slide') 'current-demo'}}" onClick={{ action (mut effect) 'slide' }}>Slide in</a>
			<a class="{{if (eq effect 'genie') 'current-demo'}}" onClick={{ action (mut effect) 'genie' }}>Genie</a>
		</div>
		<h3>Attached</h3>
		<div>
			<a class="{{if (eq effect 'flip') 'current-demo'}}" onClick={{ action (mut effect) 'flip' }}>Flip</a>
			<a class="{{if (eq effect 'bouncyflip') 'current-demo'}}" onClick={{ action (mut effect) 'bouncyflip' }}>Bouncy Flip</a>
		</div>
		<h3>Top Bar</h3>
		<div>
			<a class="{{if (eq effect 'slidetop') 'current-demo'}}" onClick={{ action (mut effect) 'slidetop' }}>Slide On Top</a>
			<a class="{{if (eq effect 'exploader') 'current-demo'}}" onClick={{ action (mut effect) 'exploader' }}>Expanding Loader</a>
		</div>
		<h3>Other</h3>
		<div>
			<a class="{{if (eq effect 'cornerexpand') 'current-demo'}}" onClick={{ action (mut effect) 'cornerexpand' }}>Corner Expand</a>
			<a class="{{if (eq effect 'loadingcircle') 'current-demo'}}" onClick={{ action (mut effect) 'loadingcircle' }}>Loading Circle</a>
			<a class="{{if (eq effect 'boxspinner') 'current-demo'}}" onClick={{ action (mut effect) 'boxspinner' }}>Box Spinner</a>
			<a class="{{if (eq effect 'thumbslider') 'current-demo'}}" onClick={{ action (mut effect) 'thumbslider' }}>Thumb Slider</a>
		</div>
	</nav>
  <select onchange={{action (mut notificationType) value="target.value"}}>
    {{#each typeOptions as |t|}}
      <option value={{t}}>{{t}}</option>
    {{/each}}
  </select>
</div>
{{outlet}}
